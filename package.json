{
  "name": "tideman-visualizer",
  "version": "0.1.0",
  "description": "A React + TypeScript visualizer for the Tideman (Ranked Pairs) voting algorithm, with step-by-step locking and graph view.",
  "license": "MIT",
  "author": "",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "build:demo": "vite build --config vite.config.demo.ts",
    "dev": "vite",
    "preview": "vite preview",
    "preview:demo": "vite preview --config vite.config.demo.ts",
    "typecheck": "tsc --noEmit",
    "deploy": "npm run build:demo && gh-pages -d dist-demo"
  },
  "peerDependencies": {
    "react": ">=17 || >=18",
    "react-dom": ">=17 || >=18"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "gh-pages": "^6.3.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3",
    "vite": "^5.4.8"
  }
}
